{
  "$id": "https://www.vchrist.at/mqttbridge/schemas/bridges",
  "type": "object",
  "required": [
    "bridges"
  ],
  "properties": {
    "bridges": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/bridge"
      }
    }
  },
  "$defs": {
    "bridge": {
      "type": "object",
      "required": [
        "name",
        "brokers"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLenght": 1
        },
        "brokers": {
          "$ref": "#/$defs/brokers"
        }
      }
    },
    "brokers": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/broker"
      },
      "minItems": 2
    },
    "broker": {
      "type": "object",
      "required": [
        "instance_name"
      ],
      "properties": {
        "connection": {
          "$ref": "#/$defs/connection",
          "default": {
            "client_id": "",
            "keep_alive": 60,
            "clean_session": true,
            "will_topic": "",
            "will_message": "",
            "will_qos": 0,
            "will_retain": false,
            "username": "",
            "password": "",
            "loop_prevention": false
          }
        },
        "instance_name": {
          "type": "string",
          "minLenght": 1
        },
        "protocol": {
          "$ref": "#/$defs/protocol",
          "default": "in"
        },
        "encryption": {
          "$ref": "#/$defs/encryption",
          "default": "legacy"
        },
        "transport": {
          "$ref": "#/$defs/transport",
          "default": "stream"
        },
        "topics": {
          "$ref": "#/$defs/topics",
          "default": [
            {
              "topic": "#",
              "qos": 0
            }
          ]
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "protocol": {
                "const": "in"
              }
            }
          },
          "then": {
            "properties": {
              "host" : {
                "type": "string",
                "default": ""
              },
              "port": {
                "type": "integer",
                "minimum": 0,
                "maximum": 65535,
                "default": 0
              }
            }
          }
        },{
          "if": {
            "properties": {
              "protocol": {
                "const": "in6"
              }
            }
          },
          "then": {
            "properties": {
              "host" : {
                "type": "string",
                "default": ""
              },
              "port": {
                "type": "integer",
                "minimum": 0,
                "maximum": 65535,
                "default": 0
              }
            }
          }
        },{
          "if": {
            "properties": {
              "protocol": {
                "const": "un"
              }
            }
          },
          "then": {
            "properties": {
              "sun_path" : {
                "type": "string",
                "default": ""
              }
            }
          }
        },{
          "if": {
            "properties": {
              "protocol": {
                "const": "rc"
              }
            }
          },
          "then": {
            "properties": {
              "bt_address" : {
                "type": "string",
                "default": ""
              },
              "channel": {
                "type": "integer",
                "default": 0,
                "minimum": 0,
                "maximum": 16
              }
            }
          }
        },{
          "if": {
            "properties": {
              "protocol": {
                "const": "rc"
              }
            }
          },
          "then": {
            "properties": {
              "bt_address" : {
                "type": "string",
                "default": ""
              },
              "psm": {
                "type": "integer",
                "default": 0,
                "minimum": 0,
                "maximum": 16
              }
            }
          }
        }
      ]
    },
    "connection": {
      "type": "object",
      "properties": {
        "client_id": {
          "type": "string",
          "default": ""
        },
        "keep_alive": {
          "type": "integer",
          "default": 60
        },
        "clean_session": {
          "type": "boolean",
          "default": true
        },
        "will_topic": {
          "type": "string",
          "default": ""
        },
        "will_message": {
          "type": "string",
          "default": ""
        },
        "will_qos": {
          "type": "integer",
          "default": 0,
          "minimum": 0,
          "maximum": 2
        },
        "will_retain": {
          "type": "boolean",
          "default": false
        },
        "username": {
          "type": "string",
          "default": ""
        },
        "password": {
          "type": "string",
          "default": ""
        },
        "loop_prevention": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "protocol": {
      "type": "string",
      "enum": [
        "in",
        "in6",
        "l2",
        "rc",
        "un"
      ]
    },
    "encryption": {
      "type": "string",
      "enum": [
        "legacy",
        "tls"
      ]
    },
    "transport": {
      "type": "string",
      "enum": [
        "stream",
        "websocket"
      ]
    },
    "topics": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/topic"
      }
    },
    "topic": {
      "type": "object",
      "properties": {
        "topic": {
          "type": "string",
          "default": "#"
        },
        "qos": {
          "type": "integer",
          "minimum": 0,
          "maximum": 2,
          "default": 0
        }
      }
    }
  }
}
