{
  "discover_prefix": "iotempower",
  "connection": {
    "keep_alive": 60,
    "client_id": "Client",
    "clean_session": true,
    "will_topic": "will/topic",
    "will_message": "Last Will",
    "will_qos": 0,
    "will_retain": false,
    "username": "Username",
    "password": "Password"
  },
  "mappings": {
    "topic_level": [
      {
        "name": "test01",
        "topic_level": [
          {
            "name": "button1",
            "type": "binary_sensor",
            "mapping": {
              "static": {
                "mapped_topic": "mapping/value",
                "retain_message": false,
                "example_message": "pressed",
                "message_mappings": [
                  {
                    "message": "pressed",
                    "mapped_message": "pressed"
                  },
                  {
                    "message": "released",
                    "mapped_message": "released"
                  }
                ]
              }
            }
          }
        ]
      }, {
        "name": "mapping",
        "topic_level" : [
          {
            "name": "value",
            "mapping": {
              "value": {
                "mapped_topic": "mapping/json",
                "mapping_template": "{\"state\":\"{{value}}\"}",
                "mapping_template_also_works": "{% if value == \"pressed\" %}{\"state\" : \"pressed\"}{% else if value == \"released\" %}{\"state\" : \"released\"}{% endif %}"
              }
            }
          },
          {
            "name": "json",
            "mapping": {
              "subscription": {
                  "qos": 0
              },
              "json": {
                "mapped_topic": "test02/onboard/set",
                "retain_message": false,
                "mapping_template": "{% if json.state == \"pressed\" %}on{% else if json.state == \"released\" %}off{% endif %}"
              }
            }
          }
        ]
      }
    ]
  }
}
