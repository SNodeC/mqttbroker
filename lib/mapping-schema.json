{
  "type": "object",
  "required": [
    "mappings"
  ],
  "properties": {
    "discover_prefix": {
      "type": "string",
      "default": ""
    },
    "connection": {
      "type": "object",
      "properties": {
        "keep_alive": {
          "type": "integer",
          "default": 60
        },
        "client_id": {
          "type": "string",
          "default": ""
        },
        "clean_session": {
          "type": "boolean",
          "default": false
        },
        "will_topic": {
          "type": "string",
          "default": ""
        },
        "will_message": {
          "type": "string",
          "default": ""
        },
        "will_qos": {
          "type": "integer",
          "default": 0,
          "minimum": 0,
          "maximum": 2
        },
        "will_retain": {
          "type": "boolean",
          "default": false
        },
        "username": {
          "type": "string",
          "default": ""
        },
        "password": {
          "type": "string",
          "default": ""
        }
      },
      "default": {
        "keep_alive": 60,
        "client_id": "Client",
        "clean_session": true,
        "will_topic": "will/topic",
        "will_message": "Last Will",
        "will_qos": 0,
        "will_retain": false,
        "username": "Username",
        "password": "Password"
      }
    },
    "mappings": {
      "type": "object",
      "required": [
        "topic_level"
      ],
      "properties": {
        "topic_level": {
        "$id": "https://www.vchrist.at/mqttmapper/schemas/topic_level",
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name"
            ],
            "anyOf": [
              {
                "required": [
                  "topic_level"
                ]
              },
              {
                "required": [
                  "mapping"
                ]
              }
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "topic_level": {
                  "$ref": "#"

              },
              "mapping": {
                "anyOf": [
                  {
                    "$ref" : "#/items/defs/mapping_static"
                  },
                  {
                    "$ref" : "#/items/defs/mapping_value"
                  },
                  {
                    "$ref" : "#/items/defs/mapping_json"
                  }
                ]
              }
            },
            "defs" : {
              "mapping_static": {
                "type": "object",
                "required": [
                  "static"
                ],
                "properties": {
                  "type": {
                    "type": "string",
                    "default": ""
                  },
                  "subscription": {
                    "$ref" : "#/items/defs/subscription"
                  },
                  "static": {
                    "type": "object",
                    "required": [
                      "mapped_topic",
                      "message_mappings"
                    ],
                    "properties": {
                      "mapped_topic": {
                        "type": "string",
                        "minLength": 1
                      },
                      "retain_message": {
                        "type": "boolean",
                        "default": false
                      },
                      "qos": {
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 2
                      },
                      "message_mappings": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "required": [
                            "message",
                            "mapped_message"
                          ],
                          "properties": {
                            "message": {
                              "type": "string",
                              "minLength": 1
                            },
                            "mapped_message": {
                              "type": "string",
                              "minLength" : 1
                            }
                          }
                        }
                      }
                    }
                  }
                }
              },
              "mapping_value" : {
                "type": "object",
                "required": [
                 "value"
                ],
                "properties": {
                  "type": {
                    "type": "string",
                    "default": ""
                  },
                  "subscription": {
                    "$ref" : "#/items/defs/subscription"
                  },
                  "value": {
                    "anyOf": [
                      {
                        "$ref" : "#/items/defs/template_mapping"
                      },
                      {
                        "type": "array",
                        "items": {
                          "$ref" : "#/items/defs/template_mapping"
                        }
                      }
                    ]
                  }
                }
              },
              "mapping_json" : {
                "type": "object",
                "required": [
                  "json"
                ],
                "properties": {
                  "type": {
                    "type": "string",
                    "default": ""
                  },
                  "subscription": {
                    "$ref" : "#/items/defs/subscription"
                  },
                  "json": {
                    "anyOf": [
                      {
                        "$ref" : "#/items/defs/template_mapping"
                      },
                      {
                        "type": "array",
                        "items": {
                          "$ref" : "#/items/defs/template_mapping"
                        }
                      }
                    ]
                  }
                }
              },
              "subscription": {
                "type": "object",
                "properties": {
                  "qos": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 2
                  }
                },
                "default" : {
                  "qos" : 0
                }
              },
              "template_mapping" : {
                "type": "object",
                "required": [
                  "mapped_topic",
                  "mapping_template"
                ],
                "qos": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 2
                },
                "properties": {
                  "mapped_topic": {
                    "type": "string",
                    "minLength": 1
                  },
                  "retain_message": {
                    "type": "boolean",
                    "default": false
                  },
                  "mapping_template": {
                    "type": "string",
                    "minLength": 1
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
