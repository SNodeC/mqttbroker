{
  "type": "object",
  "required": [
    "mappings"
  ],
  "properties": {
    "discover_prefix": {
      "type": "string",
      "default": ""
    },
    "connection": {
      "type": "object",
      "properties": {
        "keep_alive": {
          "type": "integer",
          "default": 60
        },
        "client_id": {
          "type": "string",
          "default": ""
        },
        "clean_session": {
          "type": "boolean",
          "default": false
        },
        "will_topic": {
          "type": "string",
          "default": ""
        },
        "will_message": {
          "type": "string",
          "default": ""
        },
        "will_qos": {
          "type": "integer",
          "default": 0,
          "minimum": 0,
          "maximum": 2
        },
        "will_retain": {
          "type": "boolean",
          "default": false
        },
        "username": {
          "type": "string",
          "default": ""
        },
        "password": {
          "type": "string",
          "default": ""
        }
      }
    },
    "mappings": {
      "type": "object",

      "required": [
        "topic_level"
      ],
      "properties": {
        "topic_level": {
          "type": "array",
          "items": {
            "$id": "https://www.vchrist.at/snode.c/schemas/",
            "type": "object",
            "required": [
              "name"
            ],
            "anyOf": [
              {
                "required": [
                  "topic_level"
                ]
              },
              {
                "required": [
                  "mapping"
                ]
              }
            ],
            "properties": {
              "name": {
                "type": "string",
                "default": ""
              },
              "type": {
                "type": "string",
                "default": ""
              },
              "subscription": {
                "type": "object",
                "properties": {
                  "qos": {
                    "type": "integer",
                    "default": 0,
                    "minimum": 0,
                    "maximum": 2
                  }
                },
                "default" : {
                    "qos" : 0
                }
              },
              "topic_level": {
                "type": "array",
                "items": {
                  "$ref": "#"
                }
              },
              "mapping": {
                "anyOf": [
                  {
                    "type": "object",
                    "required": [
                      "static"
                    ],
                    "properties": {
                      "static": {
                        "type": "object",
                        "required": [
                          "mapped_topic",
                          "message_mappings"
                        ],
                        "properties": {
                          "mapped_topic": {
                            "type": "string",
                            "minLength": 1
                          },
                          "retain_message": {
                            "type": "boolean",
                            "default": false
                          },
                          "qos": {
                            "type": "integer",
                            "default": 0,
                            "minimum": 0,
                            "maximum": 2
                          },
                          "message_mappings": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "required": [
                                "message",
                                "mapped_message"
                              ],
                              "properties": {
                                "message": {
                                  "type": "string",
                                  "minLength": 1
                                },
                                "mapped_message": {
                                  "type": "string",
                                  "minLength" : 1
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  },
                  {
                    "$ref" : "#/$defs/mapping-value"
                  },
                  {
                    "$ref" : "#/$defs/mapping-json"
                  }
                ]
              }
            },
            "$defs" : {
              "mapping-value" : {
                "type": "object",
                "required": [
                 "value"
                ],
                "properties": {
                  "value": {
                    "anyOf": [
                      {
                        "$ref" : "#/$defs/template_mapping"
                      },
                      {
                        "type": "array",
                        "items": {
                          "$ref" : "#/$defs/template_mapping"
                        }
                      }
                    ]
                  }
                }
              },
              "mapping-json" : {
                "type": "object",
                "required": [
                  "json"
                ],
                "properties": {
                  "json": {
                    "anyOf": [
                      {
                        "$ref" : "#/$defs/template_mapping"
                      },
                      {
                        "type": "array",
                        "items": {
                          "$ref" : "#/$defs/template_mapping"
                        }
                      }
                    ]
                  }
                }
              },
              "template_mapping" : {
                "type": "object",
                "required": [
                  "mapped_topic",
                  "mapping_template"
                ],
                "qos": {
                  "type": "integer",
                  "default": 0,
                  "minimum": 0,
                  "maximum": 2
                },
                "properties": {
                  "mapped_topic": {
                    "type": "string",
                    "minLength": 1
                  },
                  "retain_message": {
                    "type": "boolean",
                    "default": false
                  },
                  "mapping_template": {
                    "type": "string",
                    "minLength": 1
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
